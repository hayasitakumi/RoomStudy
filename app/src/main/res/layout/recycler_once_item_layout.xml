<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/recyclerItemNameText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="namae"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/recyclerItemAgeText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="age"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recyclerItemNameText" />

    <TextView
        android:id="@+id/recyclerItemGenderText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="gender"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recyclerItemAgeText" />

    <TextView
        android:id="@+id/recyclerItemHobbyText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="hobby"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recyclerItemGenderText" />

</androidx.constraintlayout.widget.ConstraintLayout>